<%= extends :application do %>
  <%= append :content do %>
    <h2>Category New</h2>

    <%= form_for @category, url: { action: :create } do |f| %>
      <p>
        <%= f.label       "Title" %></br>
        <%= f.text_field  :title %>
      </p>
      <p>
        <%= f.label       "Description" %></br>
        <%= f.text_area   :description %>
      </p>
      <p>
        <%= f.label "Create Category" %></br>
        <%= f.submit %>
      </p>
    <% end %>

  <% end %>
<% end %>
