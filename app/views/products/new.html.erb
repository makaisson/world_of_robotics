<%= extends :application do %>
  <%= append :content do %>
    <h2>Product New</h2>

    <%= form_for @product, url: { action: :create } do |f| %>
      <p>
        <%= f.label       "Title" %></br>
        <%= f.text_field  :title %>
      </p>
      <p>
        <%= f.label           "Category"%></br>
        <!-- passing in the category id as a seperate parameter -->
        <%= collection_select :category, :id, Category.all, :id, :title %>
      </p>
      <p>
        <%= f.label       "Description" %></br>
        <%= f.text_area   :description %>
      </p>
      <p>
        <%= f.label       "Price" %></br>
        <%= f.text_field  :price %>
      </p>
      <p>
        <%= f.label "Create Product" %></br>
        <%= f.submit %>
      </p>
    <% end %>

  <% end %>
<% end %>
